{% if null != tc_u and null == tc_u.success %}
<script>
	$('#lastStep').modal({
	    keyboard: false,
	    show: true,
	    backdrop: 'static'
	});

	$('form#tc_continue_form').submit(function(e){
	    e.defaultPrevented;
	    var $Form = $(this);
	    var __data = new FormData();


	    {% for i,e in tc_u.data %}
    	 __data.append('{{ i }}', '{{ e }}');
		{% endfor %}

	   

	    $Form.serializeArray().map(function(x){__data.append(x.name, x.value);}); 

	    if(undefined == $Form.data('locked') || false == $Form.data('locked')) {
	      var l = Ladda.create( document.querySelector( '#tc_continue_btn' ) );
	      l.start();

	      $.ajax({
	          type : "POST",
	          url : "api/{{ tc_u.route }}",
	          contentType:false,
      		  processData:false,
	          data : __data,
	          beforeSend: function(){ 
	              $Form.data('locked', true) 
	          },
	          success : function(json) {
	              if(json.success == 1) {
	                  success_message(json.message);
	                  setTimeout(function(){
	                      location.reload();
	                  }, 1000);
	              } else {
	                  error_message(json.message);
	              }
	          },
	          error : function(xhr, status) {
	              error_message('An internal problem has occurred');
	          },
	          complete: function(){ 
	              $Form.data('locked', false);
	              l.stop();
	          } 
	      });
	    }

	    return false;
	});
</script>

{% endif %}


