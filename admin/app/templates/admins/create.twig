{% extends 'overall/layout' %}
{% block appHeader %}
<link rel="stylesheet" href="assets/admin/global/vendor/dropify/dropify.css">
<link rel="stylesheet" href="assets/admin/global/vendor/bootstrap-datepicker/bootstrap-datepicker.css">
{% endblock %}
{% block appBody %}
  <div class="page">
    <div class="page-header">
      <h1 class="page-title">Crear administrador</h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="admins/">Admins</a></li>
        <li class="breadcrumb-item active">Crear</li>
      </ol>
    </div>
    <div class="page-content">
      <div class="panel">
        <div class="panel-body container-fluid">
          <div class="row row-lg">
            <div class="col-md-12">
              <div class="example-wrap">
                <h4 class="example-title">Administradores - Creación</h4>
                <div class="example">
                  <form autocomplete="off" id="admins_form" enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-xs-12 col-md-6">

                        <div class="form-group">
                          <label class="form-control-label" for="id_email">Email <span class="required">*</span></label>
                          <input type="email" id="id_email" class="form-control" name="email" value="" placeholder="email@demo.com" autocomplete="off">
                        </div>

                        <div class="form-group">
                          <label class="form-control-label" for="id_pass">Contraseña <span class="required">*</span></label>
                          <input type="password" id="id_pass" class="form-control" name="pass" placeholder="Contraseña" autocomplete="off">
                        </div>

                        <div class="form-group">
                          <label class="form-control-label" for="id_pass_repeat">Repetir Contraseña <span class="required">*</span></label>
                          <input type="password" id="id_pass_repeat" class="form-control" name="pass_repeat" placeholder="Repetir Contraseña" autocomplete="off">
                        </div>
                        
                        <div class="row">
                          <div class="form-group col-xs-12 col-md-6">
                            <label class="form-control-label" for="id_gender">Género <span class="required">*</span></label>
                            <select class="form-control" id="id_gender" name="gender">
                              <option value>Elegir Género</option>
                              <option value="male">Masculino</option>
                              <option value="female">Femenino</option>
                            </select>
                          </div>

                          <div class="form-group col-xs-12 col-md-6">
                            <label class="form-control-label" for="id_birthdate">Fecha de nacimiento <span class="required">*</span></label>
                            <div class="input-group">
                              <span class="input-group-addon">
                                <i class="icon wb-calendar" aria-hidden="true"></i>
                              </span>
                              <input type="text" id="id_birthdate" class="form-control" name="birthdate" data-plugin="datepicker">
                            </div>
                          </div>
                        </div>
                        

                        
                      </div>
                      <div class="col-xs-12 col-md-6">
                        <div class="example-wrap">
                          <h4 class="example-title">Imágen de Perfil</h4>
                          <div class="example">
                            <input type="file" name="perfil" id="input-file-now-custom-1" data-height="125" data-plugin="dropify" />
                          </div>
                        </div>
                    
                        <div class="form-group">
                          <label class="form-control-label" for="id_fist_name">Nombre <span class="required">*</span></label>
                          <input type="tel" id="id_fist_name" class="form-control" name="fist_name" placeholder="Nombre del usuario" autocomplete="off">
                        </div>

                        <div class="form-group">
                          <label class="form-control-label" for="id_last_name">Apellido <span class="required">*</span></label>
                          <input type="tel" id="id_last_name" class="form-control" name="last_name" placeholder="Apellido del usuario" autocomplete="off">
                        </div>
                        

                      </div>
                    </div>
                    <div class="form-group">
                      <button type="button" id="admins" class="btn btn-primary">Crear</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

{% block appFooter %}
<script src="assets/admin/global/vendor/dropify/dropify.js"></script>
<script src="assets/admin/global/js/Plugin/dropify.js"></script>
<script src="assets/admin/global/vendor/bootstrap-datepicker/bootstrap-datepicker.js"></script>
<script src="assets/admin/global/js/Plugin/bootstrap-datepicker.js"></script>
<script src="assets/jscontrollers/admins/create.js"></script>  

{% endblock %}